<div class="container mt-32">
  <div class="row justify-content-center">
    <div class="col-lg-6">

      <%= simple_form_for [@workspace, @booking] do |f| %>

          <div class="card-booking px-2 my-4 mx-auto">
            <div class="d-flex justify-content-center">
              <h2 class="mt-3"><%= @workspace.name %></h2>
            </div>
              <div class="mt-4 mb-4 d-flex justify-content-between">
                <div>
                  <p>Daily rate</p>  
                  <small id="daily_rate"><%= @workspace.daily_rate %> CHF / day</small>
                </div>
                <div class="text-right">
                  <p>Total Price</p> 
                  <small id="computed_price"> CHF</small>
                </div>
              </div>
            </div>

        <div class="d-flex justify-content-between">
          <%= f.input :start_date, as: :date, html5: true%>
          <%= f.input :end_date, as: :date, html5: true%>
        </div>
        <%= f.input :number_of_persons, collection: Booking::NUMBER_OF_PERSONS, id:"number_of_persons" %>
        <div class="d-flex justify-content-center">
          <%= f.button :submit, "Book", class: "btn btn-home btn-sm " %>
        </div>
      <% end %>
    </div>
  </div>
</div>
