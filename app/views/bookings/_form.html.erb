<div class="container mt-32">
  <div class="row justify-content-center">
    <div class="col-lg-6">

      <%= simple_form_for [@workspace, @booking] do |f| %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
        <%= f.input :number_of_persons, collection: Booking::NUMBER_OF_PERSONS %>
        <%= f.button :submit, "Book", class: "btn btn-primary btn-sm" %>
      <% end %>
      <p>
        <%= link_to 'Back to bookings', workspace_bookings_path %>
      </p>
    </div>
  </div>
</div>
